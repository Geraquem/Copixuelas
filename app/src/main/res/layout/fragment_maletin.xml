<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/easy_print"
            android:gravity="center"
            android:text="@string/hideTheMoney"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/maletinOne"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ic_maletin_one_open"
            android:contentDescription="@string/contentDescription" />

        <ImageView
            android:id="@+id/maletinTwo"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_maletin_two_open"
            android:contentDescription="@string/contentDescription" />

    </LinearLayout>

</ScrollView>